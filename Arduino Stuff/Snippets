//requires an array of trigger values
//returns an array of [motor value, direction]
//requires defining 2 tuning constants
int getElevation(int[] d) {
//first trigger = up, 2nd = down
  int vals = 0;
  if(d[0] > d[1]) {
    vals = (d[0]*dconst1)+dconst2;
    } else {
    vals[0] = -1*(d[1]*dconst1)+dconst2;
    }
  return vals;
}
